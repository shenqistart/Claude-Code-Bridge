{
  "name": "claude-code-bridge",
  "version": "1.0.0",
  "description": "A Node.js CLI tool for managing Claude Code installation and API provider configurations",
  "main": "dist/index.js",
  "bin": {
    "ccb": "bin/ccb"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci --watchAll=false"
  },
  "keywords": [
    "claude",
    "anthropic",
    "cli",
    "api",
    "code",
    "moonshot",
    "kimi"
  ],
  "author": "banxing",
  "license": "MIT",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^8.2.6"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.4",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "jest": "^30.0.4",
    "ts-jest": "^29.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
